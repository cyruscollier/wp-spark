<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="vendor/cyruscollier/wp-test/bootstrap/integration.php"
>
    <php>
        <includePath>.</includePath>
        <const name="WP_RUN_CORE_TESTS" value="0" />
        <const name="WP_TESTS_BOOTSTRAP_FILE" value="vendor/cyruscollier/wp-test/bootstrap/integration.php" />
        <const name="WP_TESTS_ACTIVE_THEME" value="twentyeleven" />
    </php>
    <testsuites>
        <testsuite>
            <directory suffix=".php">./tests/integration</directory>
            <exclude>./tests/integration/wp-tests-config.php</exclude>
        </testsuite>
    </testsuites>
    <groups>
        <exclude>
            <group>ajax</group>
            <group>external-http</group>
        </exclude>
    </groups>
</phpunit>